project Moth is

   for Source_Dirs use ("kernel/core/**", "build/openconf");
   for Object_Dir use "obj";
   for Languages use ("Ada", "C");

   package Builder is
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnatw.eH.YD", "-gnatf", "-Wall");
   end Compiler;

   package Prove is
      for Switches use ("--level=4", "--report=all");
   end Prove;

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-N", "-c4", "-c3");
   end Pretty_Printer;

end Moth;
